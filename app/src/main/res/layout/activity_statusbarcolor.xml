<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_007aff"
        android:paddingTop="@dimen/px_50"
        >
        <ImageView
            android:layout_width="@dimen/px_48"
            android:layout_height="@dimen/px_48"
            android:src="@drawable/category_icon"
            android:layout_marginLeft="@dimen/px_20"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="StatusBarColor"
            android:layout_marginLeft="@dimen/px_20"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你好，状态栏"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginBottom="@dimen/px_30"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二种方案"
        android:onClick="solutionTwo"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三种方案"
        android:onClick="solutionThree"
        />

</LinearLayout>